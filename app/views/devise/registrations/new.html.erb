<h2>Rejestracja</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "Imię i nazwisko" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "Hasło" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> znaków minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "Ponownie wpisz hasło" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "Rola" %><br />
    <%= f.select :role_id,  options_for_select(Role.all.collect{ |p| [p.name, p.id] }) %>
  </div>

  <div class="field">
    <%= f.label "Oddział" %><br />
    <%= f.select :department_id,  options_for_select(Department.all.collect{ |p| [p.name, p.id] }) %>
  </div>

  <div class="actions">
    <%= f.submit "Utwórz konto" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
